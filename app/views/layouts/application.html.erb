  <!DOCTYPE html>
<html>
  <head>
    <title>SkillEx</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' />
    <!-- https://bootswatch.com/simplex/ -->
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.7/simplex/bootstrap.min.css' />
    <style href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'></style>
  </head>

  <body>
    <nav>
      <%= render 'layouts/header' %>
      <% if current_user %>
        <h2 align="center">Welcome to SkillEx, <%= current_user.first_name %>! </h2>
      <% else %>
        
      <% end %>
    </nav>
    <div align='center' class='container'>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
