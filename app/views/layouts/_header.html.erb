
<nav style=" width:100%;
    background-color: #ffa31a;" class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand"><%= link_to(image_tag('/images/SkillexIcon.jpg'), root_path) %><a href="/" style='font-size:large; color:white; margin-left: 10px'>SkillEx</a></a>
    </div>

    

    <ul style='margin-right: 20px' class='nav navbar-nav navbar-right'>
      <%= form_tag skills_path, method: :get do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil %>
      <% end %>
    </div>

    <ul style='margin-top: -30px; margin-right: 35px' class='nav navbar-nav navbar-right'>
       
        <% if current_user && current_user.avatar.url %>
          <%= link_to(image_tag(current_user.avatar.mini.url), edit_user_registration_path) %>
        <%elsif current_user %>
          <%= link_to(image_tag('/images/generic_nav.jpg'), edit_user_registration_path) %>
        <%end%>
        
       
        <% if current_user %>
          <li style="margin-top:10px; margin-right:20px; font-size: medium; color:#209FE3;">You have: <%= current_user.points %> <%= current_user.points == 1 ? 'Point' : 'Points' %></li>
            <li ><%= link_to 'Available Skills', skills_path, {style: "color: #209FE3"} %></li>
            <li><%= link_to 'My Skills', my_skills_path, {style: "color: #209FE3"} %></li>
            <li><%= link_to 'My Upcoming Lessons', upcoming_lessons_path , {style: "color: #209FE3"}%></li>
          <li><%= link_to 'Logout', destroy_user_session_path %></li>
        <br>
        <% end %>
    </ul>
  </div>
</nav>



