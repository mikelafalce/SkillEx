<%= form_for(skill) do |f| %>
  <% if skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <%= f.label :title %><br />
   <%= f.text_field :title %>
  </div>

  <div>
    <label for="description">Description</label>: 
    <input type="text" name="skill[description]" id="description" value="<%= skill.description %>" required />
  </div>


  <div class="actions">
    <%= f.hidden_field :created_by, value: current_user.id %>
    <%= f.submit %>
  </div>
<% end %>
