<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

<%= form_tag skills_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
<% end %><br><br>

<h1  style='color:#6396e8;' align="center">List of Skills</h1><br><br>

<% @skills.each do |skill| %>
  <div class="w3-container">
    <div class="w3-panel w3-card-4" style="background-color: white; border-radius: 25px; height: 250px; padding-left: 0px; overflow: hidden">
      <div class="row">
        <div class="col-sm-4" align='left'>
            <%if skill.avatar.url%>
              <%= image_tag skill.avatar.normal.url %>      
            <%else%>
              <%= link_to(image_tag("generic_skill.jpg"), edit_user_registration_path) %>
            <%end%>
        </div>
        <div class="col-sm-4"><h5><%= skill.title %></h5><br/><%= skill.description %><br/>
        </div>
        <div class="col-sm-4"><%= link_to 'View', skill %> <%= link_to 'Edit', edit_skill_path(skill) if current_user == skill.teacher %> <%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' } if current_user == skill.teacher %>
          <button id='Request' class='btn' style='background-color: orange; color: white'>Request a Lesson</button>
        </div>
      </div> 
    </div>
  </div>
<% end %>

<br>
<div align="center">
<h3><%= link_to 'New Skill', new_skill_path %></h3>
</div><br><br><br><br>
