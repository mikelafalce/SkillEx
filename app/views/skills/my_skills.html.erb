<head>
  <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
</head>

<body style="background-color: #6396e8;">

<h1 style="color: #ffa31a; font-family:Ubuntu;">My Skills</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <br><br>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= image_tag skill.avatar.thumb.url if skill.avatar.url %></td>
        <td><%= skill.title %></td>
        <td><%= skill.description %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) if current_user == skill.teacher %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } if current_user == skill.teacher %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>

</body>
