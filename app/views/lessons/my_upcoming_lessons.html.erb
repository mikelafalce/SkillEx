<head><link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet"></head>


<body style="background-color: #6396e8;">
<p id="notice"><%= notice %></p>


<br><br><br><br>
<h1 class="text-center" style="color: #ffa31a; font-family:Ubuntu;">My Upcoming Lessons</h1>

<div class="text-center">
<table align="center" style="width:80%">

  <thead>
    <tr  >
      <th></th>
      <th>Skill</th>
      <th>Teacher</th>
      <th>Student</th>
      <th>Start Time</th>
      <th>Requested At</th>
      <th>Confirmed At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h3>As Student:</h3>
    <br><br>
    <% @my_lessons_as_student.each do |lesson| %>
      <tr >
        <td><%= image_tag lesson.skill.avatar.thumb.url if lesson.skill.avatar.url %></td>
        <td><%= lesson.skill.title %></td>
        <td><%= lesson.teacher.first_name %> <%= lesson.teacher.last_name %></td>
        <td><%= lesson.student.first_name %> <%= lesson.student.last_name %></td>
        <td><%= lesson.start_time %></td>
        <td><%= lesson.requested_at %></td>
        <td><%= lesson.confirmed_at %></td>
        <td><%= link_to 'Lesson Details', lesson, {style: "color: #6396e8"} %></td>
        <td><%= link_to 'Edit Lesson', edit_lesson_path(lesson), {style: "color: #6396e8"} %></td>
        <!-- <td><%= link_to 'Cancel Lesson', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
    </tbody>

    <br><br>
   
      

  <tbody>
    <h3>As Teacher:</h3>
    <br><br>
    <% @my_lessons_as_teacher.each do |lesson| %>
      <tr >
        <td><%= image_tag lesson.skill.avatar.thumb.url if lesson.skill.avatar.url %></td>
        <td><%= lesson.skill.title %></td>
        <td><%= lesson.teacher.first_name %> <%= lesson.teacher.last_name %></td>
        <td><%= lesson.student.first_name %> <%= lesson.student.last_name %></td>
        <td><%= lesson.start_time %></td>

        <td><%= lesson.requested_at %></td>
        <td><%= lesson.confirmed_at %></td>
        <td><%= link_to 'Lesson Details', lesson, {style: "color: #6396e8"} %></td>
        <td><%= link_to 'Edit Lesson', edit_lesson_path(lesson), {style: "color: #6396e8"} %></td>
        <!-- <td><%= link_to 'Cancel Lesson', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

</body>
