<head><link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet"></head>

<p id="notice"><%= notice %></p>

<h1 class="text-center" style="color: #ffa31a; font-family:Ubuntu;">My Lesson</h1>
<div class="text-center" >
<p>
  <strong>Skill:</strong>
  <%= @lesson.skill.title %>
</p>

<p>
  <strong>Teacher:</strong>
  <%= @lesson.teacher.first_name %> <%= @lesson.teacher.last_name %>
</p>

<p>
  <strong>Student:</strong>
  <%= @lesson.student.first_name %> <%= @lesson.student.last_name %>
</p><br>

<p>
  <strong>Start Time:</strong>
  <%= @lesson.start_time %>
</p>

<p>
  <strong>Duration (In Hours):</strong>
  <%= @lesson.hours %>
</p>

<p>
  <strong>Requested At:</strong>
  <%= @lesson.requested_at %>
</p>

<p>
  <strong>Confirmed At:</strong>
  <%= @lesson.confirmed_at %>
</p><br>

<%= link_to 'Confirm', confirm_lesson_path(@lesson), {style: "color: #6396e8"} if @lesson.confirmed_at == nil && current_user == @lesson.teacher%> 
<%= link_to 'Edit', edit_lesson_path(@lesson), {style: "color: #6396e8"} %> |
<%= link_to 'Back', lessons_path, {style: "color: #6396e8"} %>
</div>
